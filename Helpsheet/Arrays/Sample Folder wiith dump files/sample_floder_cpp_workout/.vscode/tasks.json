{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // Changed to g++.exe for C++ support
            "command": "C:\\MinGW\\bin\\g++.exe", // Use g++.exe for C++ files
            "args": [
                "-fdiagnostics-color=always", // Enables colored error messages
                "-g", // Includes debugging symbols
                "${file}", // Input source file
                "-o", // Specifies output file
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output executable file
            ],
            "options": {
                "cwd": "${fileDirname}" // Set working directory to the file's directory
            },
            "problemMatcher": [
                "$gcc" // Matches GCC compiler errors and warnings
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
